<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/minigaia_bg">


    <Button
        android:id="@+id/dayButton"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:icon="@drawable/sun"
        app:iconGravity="textTop"
        app:iconPadding="20dp"
        app:iconSize="60dp"
        app:iconTint="#000000"
        app:backgroundTint="@color/minigaia_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/nightButton"
        android:layout_width="300dp"
        android:layout_height="165dp"
        android:text="Button2"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:icon="@drawable/moon"
        app:iconGravity="textTop"
        app:iconPadding="20dp"
        app:iconSize="60dp"
        app:iconTint="#000000"
        app:backgroundTint="@color/minigaia_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayButton"
        app:layout_constraintVertical_bias="0.653" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/home_btn_string"
        android:tint="#000000"
        app:backgroundTint="@color/minigaia_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/minigaia_onClick"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="81dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/nightButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayButton"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/clock" />

    <ImageView
        android:layout_width="81dp"
        android:layout_height="69dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/nightButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayButton"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/arrowdown" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/nightButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayButton"
        app:layout_constraintVertical_bias="0.41"
        app:srcCompat="@drawable/plus" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="53dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="12"
        android:textAlignment="center"
        android:textColor="#434547"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nightButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/dayButton"
        app:layout_constraintVertical_bias="0.417" />

</androidx.constraintlayout.widget.ConstraintLayout>